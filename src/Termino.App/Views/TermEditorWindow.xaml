<Window x:Class="Termino.App.TermEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор термина" Height="320" Width="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Заголовок:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Text="{Binding Item.Title, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Text="{Binding Item.Description}" AcceptsReturn="True"
               TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Срок:" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding DueDate}" Margin="0,0,8,0"/>
                    <TextBox Width="80" Text="{Binding DueTimeText}" ToolTip="HH:mm"/>
                </StackPanel>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="120" Margin="6" IsDefault="True" Click="Save_Click"/>
            <Button Content="Отмена" Width="120" Margin="6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
