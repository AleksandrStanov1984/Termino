<Window x:Class="Termino.App.Views.TermEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Термин" Height="400" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Margin="12" Padding="16" Background="White" CornerRadius="8"
            BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Название -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox   Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                       Text="{Binding Title, UpdateSourceTrigger=PropertyChanged,
                                      ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

            <!-- Дата -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <DatePicker Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                        SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged,
                                               ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

            <!-- Время (HH:mm) -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Время:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" Width="80"
                       HorizontalAlignment="Left"
                       Text="{Binding DueTime, StringFormat=hh\\:mm, UpdateSourceTrigger=PropertyChanged,
                                      ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

            <!-- Описание -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Описание:" VerticalAlignment="Top" Margin="0,2,8,0"/>
            <TextBox   Grid.Row="3" Grid.Column="1" Margin="0"
                       AcceptsReturn="True" TextWrapping="Wrap"
                       Height="160" VerticalScrollBarVisibility="Auto"
                       Text="{Binding Description, UpdateSourceTrigger=PropertyChanged,
                                      ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Сохранить" IsDefault="True"
                        Command="{Binding SaveCommand}"/>
                <Button Content="Отмена" Margin="8,0,0,0" IsCancel="True"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
