<Window x:Class="Termino.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Termino.App"
        Title="Настройки" Height="260" Width="500"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Теперь InverseBoolConverter доступен для StaticResource -->
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>
    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ОСНОВНАЯ ПАНЕЛЬ С НАСТРОЙКАМИ -->
        <StackPanel>
            <TextBlock Text="E-mail для рассылки (до 3)" FontWeight="Bold" Margin="0,0,0,6"/>
            <StackPanel>
                <TextBox Text="{Binding Emails[0], UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Emails[1], UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Emails[2], UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
            </StackPanel>

            <Separator Margin="0,6,0,6"/>

            <TextBlock Text="Формат времени" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <RadioButton Content="24 часа"
                     IsChecked="{Binding Use12h, Converter={StaticResource InverseBoolConverter}, Mode=TwoWay}"
                     Margin="0,0,12,0"/>
                <RadioButton Content="12 часов"
                     IsChecked="{Binding Use12h, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>

        <!-- НИЖНЯЯ ПАНЕЛЬ С КНОПКАМИ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="120" Margin="6" Click="Save_Click"/>
            <Button Content="Отмена" Width="120" Margin="6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
