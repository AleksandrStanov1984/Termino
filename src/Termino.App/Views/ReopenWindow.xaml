<Window x:Class="Termino.App.ReopenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обновить (вернуть из выполненных)" Height="180" Width="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Новая дата/время (мин. +1 час от текущего):" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding DueDate}" Margin="0,0,8,0"/>
                <TextBox Width="80" Text="{Binding DueTimeText}" ToolTip="HH:mm"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Margin="6" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" Margin="6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
